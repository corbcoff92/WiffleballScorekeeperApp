<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wiffleballscorekeeperapp">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_wiffleball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wiffleball_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WiffleballScorekeeperApp"
        tools:targetApi="lollipop">
        <activity
            android:name=".activities.GameLoaderActivity"
            android:exported="false"
            android:label="Load Game"/>
        <activity
            android:name=".activities.GameSaverActivity"
            android:exported="false"
            android:label="Save Game"/>
        <activity
            android:name=".activities.SetupNewGameActivity"
            android:exported="false"
            android:label="Setup New Game" />
        <activity
            android:name=".activities.GameActivity"
            android:exported="false"
            android:label="Wiffleball Scorekeeper"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="Wiffleball Scorekeeper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>